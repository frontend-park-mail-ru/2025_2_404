{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@pages/*": ["./pages/*"],
      "@services/*": ["./services/*"],
      "@public/*": ["./public/*"]
    }
  },
  "include": ["**/*.ts", "**/*.js", "vite.config.ts", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
