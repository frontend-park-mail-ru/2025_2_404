<div class="header__content">
    <a href="/" class="header__logo-link">
        <div class="logo">
            <img src="/public/assets/logo.svg" alt="Ad.net logo" />
            <span class="logo__text">Ad.net</span>
        </div>
    </a>

    {{#if isAuthenticated}}


    <nav class="header__nav">
        {{#each navItems}}
        <div class="header__nav-dropdown">
            <a href="#" class="header__nav-link">{{this.title}}</a>
            <div class="header__dropdown">
                {{#each this.items}}
                <a href="{{this.href}}" class="header__dropdown-item" {{#if this.id}}id="{{this.id}}" {{/if}}>
                    {{this.text}}
                </a>
                {{/each}}
            </div>
        </div>
        {{/each}}
    </nav>


    <div class="profile-dropdown">
        <div class="profile-dropdown__user">
            <span class="profile-dropdown__username">{{user.username}}</span>
            <img src="{{user.avatar}}" alt="Аватар пользователя" class="profile-dropdown__avatar">
        </div>
        <div class="profile-dropdown__menu">
            <a href="/profile" class="profile-dropdown__item">
                <svg class="profile-dropdown__svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                    xmlns="http://www.w3.org/2000/svg">
                    <path
                        d="M12 11C14.2091 11 16 9.20914 16 7C16 4.79086 14.2091 3 12 3C9.79086 3 8 4.79086 8 7C8 9.20914 9.79086 11 12 11ZM12 11C18 11 21 15 21 17V21H3V17C3 15 6 11 12 11Z"
                        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
                <span>Профиль</span>
            </a>
            <a href="/balance" class="profile-dropdown__item">
                <svg class="profile-dropdown__svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                    xmlns="http://www.w3.org/2000/svg">
                    <path
                        d="M4 6H20C21.1046 6 22 6.89543 22 8V18C22 19.1046 21.1046 20 20 20H4C2.89543 20 2 19.1046 2 18V8C2 6.89543 2.89543 6 4 6Z"
                        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    <path d="M18 10H22V14H18C16.8954 14 16 13.1046 16 12V12C16 10.8954 16.8954 10 18 10Z"
                        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
                <span>Баланс</span>
            </a>
            <a href="/projects" class="profile-dropdown__item">
                <svg class="profile-dropdown__svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                    xmlns="http://www.w3.org/2000/svg">
                    <path
                        d="M8 4H4C2.89543 4 2 4.89543 2 6V18C2 19.1046 2.89543 20 4 20H20C21.1046 20 22 19.1046 22 18V8C22 6.89543 21.1046 6 20 6H12L10 4H8Z"
                        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
                <span>Проекты</span>
            </a>
            <a href="#" id="logout-btn" class="profile-dropdown__item">
                <svg class="profile-dropdown__svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                    xmlns="http://www.w3.org/2000/svg">
                    <path
                        d="M14 15L17 12M17 12L14 9M17 12H7M17 3H7C4.79086 3 3 4.79086 3 7V17C3 19.2091 4.79086 21 7 21H17C19.2091 21 21 19.2091 21 17V7C21 4.79086 19.2091 3 17 3Z"
                        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
                <span>Выход</span>
            </a>
        </div>
    </div>
    {{else}}
    <div class="header__auth-buttons">
        <button id="register-btn-header" class="btn btn--primary" type="button">Регистрация</button>
        <button id="login-btn-header" class="btn btn--secondary" type="button">Вход</button>
    </div>
    {{/if}}
</div>